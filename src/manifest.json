{
  "name": "Perkeep Browser Extension",
  "options_ui": {
    "page": "options.html",
    "chrome_style": false
  },
  "background": {
    "scripts": ["background.bundle.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon-34.png"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "<all_urls>",
    "alarms",
    "history",
    "tabs",
    "unlimitedStorage",
    "activeTab",
    "contextMenus",
    "storage",
    "pageCapture"
  ]
}
